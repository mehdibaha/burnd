<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MeetingActivity"
    android:background="@android:color/transparent">

    <!-- Si vous voulez rajoutez des items, mettez dans
    le grand Relative/LinearLayout les "paddingTop" + "clipToPadding" -->

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/profilePic"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:scaleType="fitCenter"
        android:visibility="visible"
        android:contentDescription="expanded"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignLeft="@+id/profilePic"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/profilePic"
        android:lines="2"
        android:scrollHorizontally="false"
        android:background="@color/fab_primary"
        android:textAppearance="?android:attr/textAppearance"
        android:textColor="@color/white"
        android:layout_marginBottom="30dp"
        android:textSize="15dp" />

</RelativeLayout>

